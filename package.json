{
  "name": "express-authorshaven",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist/ && babel server/ -d dist/server/ && babel index.js -d dist/",
    "start": "export NODE_ENV=production&& node dist",
    "heroku-postbuild": "npm run migration && npm run seed && npm run build",
    "test": "export NODE_ENV=test && npm run migration && nyc mocha --require @babel/register tests/**/*.spec.js --timeout 5000 --exit",
    "lint": "eslint",
    "start:dev": "NODE_ENV=development && nodemon --exec babel-node index.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "migrate": "./node_modules/.bin/babel-node ./node_modules/.bin/sequelize db:migrate",
    "undo:migration": "./node_modules/.bin/babel-node ./node_modules/.bin/sequelize db:migrate:undo:all",
    "migration": "npm run undo:migration && npm run migrate",
    "seed": "node_modules/.bin/sequelize db:seed:all",
    "undo:seed": "node_modules/.bin/sequelize db:seed:undo:all",
    "seed:dev": "export NODE_ENV=development&& babel-node ./server/seeds/index.js --preset-env"
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@sendgrid/mail": "^6.3.1",
    "bcrypt": "^3.0.3",
    "chalk": "^2.4.2",
    "connect-pg-simple": "^5.0.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "ejs": "^2.6.1",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "express-session": "^1.15.6",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.3.0",
    "method-override": "^2.3.10",
    "methods": "^1.1.2",
    "mongoose": "^5.2.2",
    "mongoose-unique-validator": "^2.0.1",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^1.0.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "passport-twitter": "^1.0.4",
    "pg-hstore": "^2.3.2",
    "request": "^2.87.0",
    "sequelize": "^4.42.0",
    "sequelize-auto-migrations": "^1.0.3",
    "sinon": "^7.2.3",
    "slug": "^0.9.3",
    "underscore": "^1.9.1",
    "winston": "^3.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.2",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.15.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "node-dev": "^3.1.3",
    "nodemon": "^1.18.9",
    "nyc": "^13.1.0",
    "sequelize-cli": "^5.4.0"
  }
}
